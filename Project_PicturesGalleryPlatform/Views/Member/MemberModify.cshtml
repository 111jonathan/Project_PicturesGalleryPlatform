@model Project_PicturesGalleryPlatform.Models.Member
@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/css/memberModify.css" media="screen">
</head>

<section class="u-clearfix u-image u-shading u-section-1" id="sec-779e">
     <div class="u-container-layout u-container-layout-1">
        <h1 class="u-text u-text-default u-text-1">編輯會員資料 </h1>
        
        <div class="u-form u-form-1">
            <form asp-action="SaveModifiedMember" method="post" id="memberModifyForm">
                  
                <div class="u-form-group u-form-name u-label-none u-form-group-3">
                   
                    <label for="name-9558" class="u-label">First Name</label>
                    <input type="text" placeholder="輸入名字" id="name" name="name"
                           class="u-input u-input-rectangle" value="@Model.name" required />
                </div>
                <br />
                
                <div class="u-form-email u-form-group u-label-none">
                    <label for="email-6797" class="u-label">Email</label>
                    
                    <input type="text" placeholder="Email" id="email" name="email"
                           class="u-input u-input-rectangle" value="@Model.email" required />
                </div>
                <br />
                <div class="u-form-group u-label-none u-form-group-5">
                    <label for="text-ef9e" class="u-label">Input</label>
                    <input type="password" placeholder="輸入密碼" id="password" name="password" class="u-input u-input-rectangle"
                           value="@Model.password"  required />

                </div>
                <br />
                <div class="u-form-group u-label-none u-form-group-6">
                    <label for="text-6f13" class="u-label">Input</label>
                    <input type="password" placeholder="再次輸入密碼" id="passwordConfirm" name="passwordConfirm"
                           class="u-input u-input-rectangle" value="@Model.password" required/>

                </div>
                <!--remove old-->
                <input type="hidden" value="" name="recaptchaResponse">
                <input type="hidden" name="formServices" value="d6043652-f3e6-cf63-5c85-3b11cacf224f">

                    <input type="hidden" placeholder="輸入使用者帳號" id="account" name="account"
                           class="u-input u-input-rectangle" value="@Model.account" required />
                
                <div class="button-container">
                    <button type="submit" class="u-btn u-btn-1">儲 存</button>  <!-- 提交按钮 -->
                    <a asp-action="Member" class="u-btn u-btn-1">取 消</a>      <!-- 返回按钮 -->
                </div>
            
            </form>
        </div>
      </div>
</section>