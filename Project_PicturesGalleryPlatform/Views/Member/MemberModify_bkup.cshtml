@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/css/memberModify.css" media="screen">
</head>

<section class="u-clearfix u-image u-shading u-section-1" id="sec-779e">
    <div class="u-clearfix u-sheet u-sheet-1">
        <h1 class="u-text u-text-default u-text-1">編輯會員資料 </h1>
        <div class="u-form u-form-1">
            <form action="https://forms.nicepagesrv.com/v2/form/process"
                  class="u-clearfix u-form-spacing-15 u-form-vertical u-inner-form" style="padding: 15px;" source="email"
                  name="form">
                <div class="u-form-group u-form-name u-form-partition-factor-2 u-label-none u-form-group-1">
                    <label for="name-9558" class="u-label">First Name</label>
                    <input type="text" placeholder="輸入名字" id="name-9558" name="name-1" class="u-input u-input-rectangle"
                           required="">
                </div>
                <div class="u-form-group u-form-name u-form-partition-factor-2 u-label-none u-form-group-2">
                    <label for="name-9558" class="u-label">Last Name</label>
                    <input type="text" placeholder="輸入姓氏" id="name-9558" name="name-2" class="u-input u-input-rectangle"
                           required="">
                </div>
                <div class="u-form-group u-form-name u-label-none u-form-group-3">
                    <label for="name-125c" class="u-label">Name</label>
                    <input type="text" placeholder="輸入使用者帳號" id="name-125c" name="username" class="u-input u-input-rectangle"
                           required="">
                </div>
                <div class="u-form-email u-form-group u-label-none">
                    <label for="email-6797" class="u-label">Email</label>
                    <input type="email" placeholder="Email" id="email-6797" name="email" class="u-input u-input-rectangle"
                           required="">
                </div>
                <div class="u-form-group u-label-none u-form-group-5">
                    <label for="text-ef9e" class="u-label">Input</label>
                    <input type="text" placeholder="輸入密碼" id="text-ef9e" name="password" class="u-input u-input-rectangle"
                           required="required">
                </div>
                <div class="u-form-group u-label-none u-form-group-6">
                    <label for="text-6f13" class="u-label">Input</label>
                    <input type="text" placeholder="再次輸入密碼" id="text-6f13" name="passwordConfirm"
                           class="u-input u-input-rectangle" required="required">
                </div>
                <div class="u-align-left u-form-group u-form-submit">
                    <a href="#" class="u-btn u-btn-submit u-button-style">提交</a>
                    <input type="submit" value="submit" class="u-form-control-hidden">
                </div>
                <div class="u-form-send-message u-form-send-success">Thank you! Your message has been sent.</div>
                <div class="u-form-send-error u-form-send-message">
                    Unable to send your message. Please fix errors then try
                    again.
                </div>
                <input type="hidden" value="" name="recaptchaResponse">
                <input type="hidden" name="formServices" value="d6043652-f3e6-cf63-5c85-3b11cacf224f">
            </form>
        </div>
    </div>
</section>